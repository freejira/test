<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".colection"
    android:background="@drawable/bg_card"

    >

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.23" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.02" />

    <TextView
        android:layout_width="400dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="@id/guideline_1"
        app:layout_constraintTop_toTopOf="@id/guideline_2"
        android:background="@drawable/im_ui8"

        android:text="Collection"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="40sp"
        app:autoSizeMaxTextSize="60sp"
        app:autoSizeStepGranularity="5sp"
        android:fontFamily="casual"
        android:gravity="center"

        />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="fitCenter"
        android:layout_margin="10dp"
        android:src="@drawable/btn_back"
        android:background="@android:color/transparent"
        android:contentDescription="@string/btn_back" />



    <LinearLayout
        android:id="@+id/lay_A"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.3"
        >

        <ImageButton
            android:id="@+id/croirang"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/card_croirang"
            android:scaleType="fitCenter"
            />

        <ImageButton
            android:id="@+id/eggball"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/card_eggball"
            android:scaleType="fitCenter"
            />

        <ImageButton
            android:id="@+id/kitchu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/card_kitchu"
            android:scaleType="fitCenter"
            />

        <ImageButton
            android:id="@+id/pancake"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/card_pancake"
            android:scaleType="fitCenter"
            />

        <ImageButton
            android:id="@+id/pupnut"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/card_pupnut"
            android:scaleType="fitCenter"
            />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_N"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/lay_A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="@drawable/im_ui1"
            android:text="croirang"

            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="20sp"
            app:autoSizeMaxTextSize="30sp"
            app:autoSizeStepGranularity="5sp"
            android:fontFamily="casual"
            android:gravity="center"

            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="@drawable/im_ui1"
            android:text="eggball"

            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="20sp"
            app:autoSizeMaxTextSize="30sp"
            app:autoSizeStepGranularity="5sp"
            android:fontFamily="casual"
            android:gravity="center"

            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="@drawable/im_ui1"
            android:text="kitchu"

            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="20sp"
            app:autoSizeMaxTextSize="30sp"
            app:autoSizeStepGranularity="5sp"
            android:fontFamily="casual"
            android:gravity="center"

            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="@drawable/im_ui1"
            android:text="pancake"

            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="20sp"
            app:autoSizeMaxTextSize="30sp"
            app:autoSizeStepGranularity="5sp"
            android:fontFamily="casual"
            android:gravity="center"

            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="@drawable/im_ui1"
            android:text="pupnut"

            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="20sp"
            app:autoSizeMaxTextSize="30sp"
            app:autoSizeStepGranularity="5sp"
            android:fontFamily="casual"
            android:gravity="center"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_B"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/lay_N"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.3"
        >

        <ImageButton
            android:id="@+id/ramo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/card_ramo"
            android:scaleType="fitCenter"
            />

        <ImageButton
            android:id="@+id/froll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/card_rollcake"
            android:scaleType="fitCenter"
            />

        <ImageButton
            android:id="@+id/sorang"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/card_sorang"
            android:scaleType="fitCenter"
            />

        <ImageButton
            android:id="@+id/turtlebread"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/card_turtlebread"
            android:scaleType="fitCenter"
            />

        <ImageButton
            android:id="@+id/whitebread"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/card_whitebread"
            android:scaleType="fitCenter"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_M"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/lay_B"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="@drawable/im_ui1"
            android:text="ramo"

            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="20sp"
            app:autoSizeMaxTextSize="30sp"
            app:autoSizeStepGranularity="5sp"
            android:fontFamily="casual"
            android:gravity="center"

            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="@drawable/im_ui1"
            android:text="froll"

            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="20sp"
            app:autoSizeMaxTextSize="30sp"
            app:autoSizeStepGranularity="5sp"
            android:fontFamily="casual"
            android:gravity="center"

            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="@drawable/im_ui1"
            android:text="sorang"

            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="20sp"
            app:autoSizeMaxTextSize="30sp"
            app:autoSizeStepGranularity="5sp"
            android:fontFamily="casual"
            android:gravity="center"

            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="@drawable/im_ui1"
            android:text="turtlebread"

            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="20sp"
            app:autoSizeMaxTextSize="30sp"
            app:autoSizeStepGranularity="5sp"
            android:fontFamily="casual"
            android:gravity="center"

            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="@drawable/im_ui1"
            android:text="whitebread"

            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="20sp"
            app:autoSizeMaxTextSize="30sp"
            app:autoSizeStepGranularity="5sp"
            android:fontFamily="casual"
            android:gravity="center"

            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>