<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text=" "
        android:textSize="40dp" />

    <TextView
        android:id="@+id/now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="0"
        android:textSize="60dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/MC"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MC"
            android:textSize="11sp"

            app:cornerRadius="10dp"
            android:backgroundTint="#FFFFFFFF"
            android:textColor="@color/black"
            app:strokeWidth="2dp"
            app:strokeColor="@color/black"
            android:layout_margin="1dp"
            />

        <Button
            android:id="@+id/MR"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MR"
            android:textSize="11sp"

            app:cornerRadius="10dp"
            android:backgroundTint="#FFFFFFFF"
            android:textColor="@color/black"
            app:strokeWidth="2dp"
            app:strokeColor="@color/black"
            android:layout_margin="1dp"
            />

        <Button
            android:id="@+id/Mplus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="M+"
            android:textSize="11sp"

            app:cornerRadius="10dp"
            android:backgroundTint="#FFFFFFFF"
            android:textColor="@color/black"
            app:strokeWidth="2dp"
            app:strokeColor="@color/black"
            android:layout_margin="1dp"

            />

        <Button
            android:id="@+id/Mminus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="M-"
            android:textSize="11sp"

            app:cornerRadius="10dp"
            android:backgroundTint="#FFFFFFFF"
            android:textColor="@color/black"
            app:strokeWidth="2dp"
            app:strokeColor="@color/black"
            android:layout_margin="1dp"
            />

        <Button
            android:id="@+id/MS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MS"
            android:textSize="11sp"

            app:cornerRadius="10dp"
            android:backgroundTint="#FFFFFFFF"
            android:textColor="@color/black"
            app:strokeWidth="2dp"
            app:strokeColor="@color/black"
            android:layout_margin="1dp"

            />

        <Button
            android:id="@+id/Mv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mv"
            android:textSize="11sp"

            app:cornerRadius="10dp"
            android:backgroundTint="#FFFFFFFF"
            android:textColor="@color/black"
            app:strokeWidth="2dp"
            app:strokeColor="@color/black"
            android:layout_margin="1dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"

        >

        <Button
            android:id="@+id/percent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="%"
            android:textSize="30sp"

            app:cornerRadius="10dp"
            android:backgroundTint="#3D00053E"
            android:textColor="@color/black"
            app:strokeWidth="2dp"
            app:strokeColor="@color/black"
            android:layout_margin="1dp"
            />

        <Button
            android:id="@+id/CE"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="CE"
            android:textSize="30sp"

            app:cornerRadius="10dp"
            android:backgroundTint="#3D00053E"
            android:textColor="@color/black"
            app:strokeWidth="2dp"
            app:strokeColor="@color/black"
            android:layout_margin="1dp"

            />

        <Button
            android:id="@+id/C"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="C"
            android:textSize="30sp"

            app:cornerRadius="10dp"
            android:backgroundTint="#3D00053E"
            android:textColor="@color/black"
            app:strokeWidth="2dp"
            app:strokeColor="@color/black"
            android:layout_margin="1dp"

            />

        <Button
            android:id="@+id/Back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="&lt;="
            android:textSize="30sp"

            app:cornerRadius="10dp"
            android:backgroundTint="#3D00053E"
            android:textColor="@color/black"
            app:strokeWidth="2dp"
            app:strokeColor="@color/black"
            android:layout_margin="1dp"
            />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/denominator"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1/x"
            android:textSize="30sp"

            app:cornerRadius="10dp"
            android:backgroundTint="#3D00053E"
            android:textColor="@color/black"
            app:strokeWidth="2dp"
            app:strokeColor="@color/black"
            android:layout_margin="1dp"
            />

        <Button
            android:id="@+id/square"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="x²"
            android:textSize="30sp"

            app:cornerRadius="10dp"
            android:backgroundTint="#3D00053E"
            android:textColor="@color/black"
            app:strokeWidth="2dp"
            app:strokeColor="@color/black"
            android:layout_margin="1dp"
            />

        <Button
            android:id="@+id/root"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2√x"
            android:textSize="30sp"

            app:cornerRadius="10dp"
            android:backgroundTint="#3D00053E"
            android:textColor="@color/black"
            app:strokeWidth="2dp"
            app:strokeColor="@color/black"
            android:layout_margin="1dp"
            />

        <Button
            android:id="@+id/div"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="/"
            android:textSize="30sp"

            app:cornerRadius="10dp"
            android:backgroundTint="#3D00053E"
            android:textColor="@color/black"
            app:strokeWidth="2dp"
            app:strokeColor="@color/black"
            android:layout_margin="1dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/num_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:textSize="30sp"

            app:cornerRadius="10dp"
            android:backgroundTint="#3D00053E"
            android:textColor="@color/black"
            app:strokeWidth="2dp"
            app:strokeColor="@color/black"
            android:layout_margin="1dp"
            />

        <Button
            android:id="@+id/num_8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:textSize="30sp"

            app:cornerRadius="10dp"
            android:backgroundTint="#3D00053E"
            android:textColor="@color/black"
            app:strokeWidth="2dp"
            app:strokeColor="@color/black"
            android:layout_margin="1dp"
            />

        <Button
            android:id="@+id/num_9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:textSize="30sp"

            app:cornerRadius="10dp"
            android:backgroundTint="#3D00053E"
            android:textColor="@color/black"
            app:strokeWidth="2dp"
            app:strokeColor="@color/black"
            android:layout_margin="1dp"
            />

        <Button
            android:id="@+id/mul"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="*"
            android:textSize="30sp"

            app:cornerRadius="10dp"
            android:backgroundTint="#3D00053E"
            android:textColor="@color/black"
            app:strokeWidth="2dp"
            app:strokeColor="@color/black"
            android:layout_margin="1dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/num_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:textSize="30sp"

            app:cornerRadius="10dp"
            android:backgroundTint="#3D00053E"
            android:textColor="@color/black"
            app:strokeWidth="2dp"
            app:strokeColor="@color/black"
            android:layout_margin="1dp"
            />

        <Button
            android:id="@+id/num_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:textSize="30sp"

            app:cornerRadius="10dp"
            android:backgroundTint="#3D00053E"
            android:textColor="@color/black"
            app:strokeWidth="2dp"
            app:strokeColor="@color/black"
            android:layout_margin="1dp"
            />

        <Button
            android:id="@+id/num_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:textSize="30sp"

            app:cornerRadius="10dp"
            android:backgroundTint="#3D00053E"
            android:textColor="@color/black"
            app:strokeWidth="2dp"
            app:strokeColor="@color/black"
            android:layout_margin="1dp"
            />

        <Button
            android:id="@+id/sub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:textSize="30sp"

            app:cornerRadius="10dp"
            android:backgroundTint="#3D00053E"
            android:textColor="@color/black"
            app:strokeWidth="2dp"
            app:strokeColor="@color/black"
            android:layout_margin="1dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/num_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:textSize="30sp"

            app:cornerRadius="10dp"
            android:backgroundTint="#3D00053E"
            android:textColor="@color/black"
            app:strokeWidth="2dp"
            app:strokeColor="@color/black"
            android:layout_margin="1dp"
            />

        <Button
            android:id="@+id/num_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:textSize="30sp"

            app:cornerRadius="10dp"
            android:backgroundTint="#3D00053E"
            android:textColor="@color/black"
            app:strokeWidth="2dp"
            app:strokeColor="@color/black"
            android:layout_margin="1dp"
            />

        <Button
            android:id="@+id/num_3"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:textSize="30sp"

            app:cornerRadius="10dp"
            android:backgroundTint="#3D00053E"
            android:textColor="@color/black"
            app:strokeWidth="2dp"
            app:strokeColor="@color/black"
            android:layout_margin="1dp"
            />

        <Button
            android:id="@+id/add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:textSize="30sp"

            app:cornerRadius="10dp"
            android:backgroundTint="#3D00053E"
            android:textColor="@color/black"
            app:strokeWidth="2dp"
            app:strokeColor="@color/black"
            android:layout_margin="1dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/negation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+/-"
            android:textSize="30sp"

            app:cornerRadius="10dp"
            android:backgroundTint="#3D00053E"
            android:textColor="@color/black"
            app:strokeWidth="2dp"
            app:strokeColor="@color/black"
            android:layout_margin="1dp"
            />

        <Button
            android:id="@+id/num_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:textSize="30sp"

            app:cornerRadius="10dp"
            android:backgroundTint="#3D00053E"
            android:textColor="@color/black"
            app:strokeWidth="2dp"
            app:strokeColor="@color/black"
            android:layout_margin="1dp"
            />

        <Button
            android:id="@+id/dot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="."
            android:textSize="30sp"

            app:cornerRadius="10dp"
            android:backgroundTint="#3D00053E"
            android:textColor="@color/black"
            app:strokeWidth="2dp"
            app:strokeColor="@color/black"
            android:layout_margin="1dp"
            />

        <Button
            android:id="@+id/enter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="="
            android:textSize="30sp"

            app:cornerRadius="10dp"
            android:backgroundTint="#1A1A6D"
            android:textColor="@color/white"
            app:strokeWidth="2dp"
            app:strokeColor="@color/black"
            android:layout_margin="1dp"

            />

    </LinearLayout>

</LinearLayout>